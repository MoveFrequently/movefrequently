<% content_for :title, "Showing exercise" %>

<div class="w-full">
  <%= render @admin_exercise %>

  <div class="flex flex-row gap-2">  
    <%= link_to "Back", admin_exercises_path, class: "mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= link_to "Edit", edit_admin_exercise_path(@admin_exercise), class: "mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= button_to "Preview", preview_admin_exercise_path(@admin_exercise), method: :get, class: "mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= button_to "Destroy this exercise", @admin_exercise, method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium" %>
  </div>
</div>
